@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<IEnumerable<Umbraco.Commerce.DemoStore.Models.IProductGroupPage>>

@if (Model.Any())
{
    <div class="flex flex-wrap -mx-3">
        @foreach (var group in Model)
        {
            <div class="w-1/2 md:w-1/3 px-3 mt-6">
                @await Html.PartialAsync("ProductGroupListItem", group)
            </div>
        }
    </div>
}